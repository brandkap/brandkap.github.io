#!/usr/bin/env bash

BIN="$(realpath --relative-to=. "$(dirname "$(realpath "${BASH_SOURCE[0]}")")")"

# The tab (\t) in the inline Ruby script shouldn't be expanded, so it's
# intentionally double-quotes-in-single-quotes.
#
# shellcheck disable=SC2016
parallel \
    --line-buffer \
    --tagstring '[{}]' \
    --verbose \
    ::: \
    "${BIN}/watch-tailwind" \
    "${BIN}/watch-jekyll"
